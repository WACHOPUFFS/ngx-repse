{
    "appId": "com.tuempresa.tuapp",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icons/icon.ico"
    },
    "nsis": {
      "installerIcon": "src/assets/icons/icon.ico",
      "uninstallerIcon": "src/assets/icons/icon.ico",
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "src/assets",
        "to": "assets"
      }
    ]
  }